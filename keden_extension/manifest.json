{
    "manifest_version": 3,
    "name": "Keden PI Autofill Premium",
    "version": "1.0",
    "description": "AI-powered PI declaration filler using Qwen 3.5",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "alarms",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://keden.kgd.gov.kz/*",
        "https://pk.uchet.kz/*",
        "http://localhost:3001/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://keden.kgd.gov.kz/*"
            ],
            "js": [
                "content/admin_auth.js",
                "content/mappers.js",
                "content/api.js",
                "content/enrichment.js",
                "content/main.js"
            ]
        }
    ]
}